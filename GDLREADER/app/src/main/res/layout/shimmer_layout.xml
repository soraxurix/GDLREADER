<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--Aquí van nuestras cosas-->
        <View
            android:id="@+id/View13"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="#e7e7e7"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <View
            android:id="@+id/View1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@id/View13"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:background="#e7e7e7"/>

        <View
            android:id="@+id/View2"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_below="@id/View13"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@id/View1"
            android:background="#e7e7e7"
            android:layout_marginStart="16dp"
            />

        <View
            android:id="@+id/View3"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/View2"
            android:layout_toEndOf="@id/View1"
            android:background="#e7e7e7"
            android:layout_marginStart="16dp"/>
        <View
            android:id="@+id/View4"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/View1"
            android:layout_below="@id/View3"
            android:background="#e7e7e7"
            android:layout_marginStart="16dp"/>

        <!--Información del segundo libro-->
        <View
            android:id="@+id/View5"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@id/View1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:background="#e7e7e7"

            />

        <View
            android:id="@+id/View6"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_below="@id/View1"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@id/View5"
            android:background="#e7e7e7"
            android:layout_marginStart="16dp"
            />

        <View
            android:id="@+id/View7"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@id/View6"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/View5"
            android:background="#e7e7e7" />
        <View
            android:id="@+id/View8"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/View5"
            android:layout_below="@id/View7"
            android:background="#e7e7e7"
            android:layout_marginStart="16dp"/>

        <!--Aquí va el Tercer libro-->

        <View
            android:id="@+id/View9"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_below="@id/View5"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:background="#e7e7e7" />

        <View
            android:id="@+id/View10"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_below="@id/View5"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@id/View9"
            android:background="#e7e7e7" />

        <View
            android:id="@+id/View11"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@id/View10"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/View9"
            android:background="#e7e7e7" />
        <View
            android:id="@+id/View12"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/View9"
            android:layout_below="@id/View11"
            android:background="#e7e7e7"
            android:layout_marginStart="16dp"/>
    </RelativeLayout>
</LinearLayout>