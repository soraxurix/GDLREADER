<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gdlreader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GDLREADER">
        <activity
            android:name=".PantallaResultadoBusqueda"
            android:exported="false" />
        <activity
            android:name=".Configuracion"
            android:exported="false" />
        <activity
            android:name=".GeneroLibros"
            android:exported="false" />
        <activity
            android:name=".SobreNosotros"
            android:exported="false" />
        <activity
            android:name=".Registrar"
            android:exported="true" />
        <activity
            android:name=".PantallaMisLibros"
            android:exported="true" />
        <activity
            android:name=".PantallaTarjeta"
            android:exported="true" />
        <activity
            android:name=".PantallaBusqueda"
            android:exported="true" />
        <activity
            android:name=".PantallaPerfil"
            android:exported="true" />
        <activity
            android:name=".InformacionLibro"
            android:exported="true" />
        <activity
            android:name=".PantallaPrincipal"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>